#include <stdio.h>
#include<conio.h>
struct student{
    char name[50];
    int marks[50];
    float average;
};
 void main()
{
    struct student s[3];
        for(int i=0;i<3;i++)
        {
            printf("the student information is %d\n",i+1);
            printf("enter name:",s[i].name);
            scanf("%s",s[i].name);
            printf("enter 3 marks of the student \n");
            int sum=0;
            for(int j=0;j<3;j++)
      {
            scanf("%d",&s[i].marks[j]);
            sum+=s[i].marks[j];
      }
       s[i].average=(float)sum/5.0;
        printf("\n");
        }
        int maxindex=0;
        float maxaverage=s[0].average;
        for(int i=1;i<3;i++){
        if(s[i].average>maxindex){
            maxindex=i;
            maxaverage=s[i].average;
        }
    }
    printf("topper name is %s\n",s[maxindex].name);
    printf("topper average is %.2f\n",s[maxindex].average);
}
